<Layout>
  <!-- Hero -->
  <Hero />
  <div
    style="
  background: url('https://images.leadconnectorhq.com/image/f_webp/q_80/r_1200/u_https://assets.cdn.filesafe.space/jcEKoOF2TKiEyPXqmAdw/media/64fb5900c42c810540a42444.jpeg') center center / cover no-repeat;
  background-attachment: fixed;
  width: 100%;
  min-height: 100vh;
"
  >
    <!-- Servicios -->
    <ServiciosSection
      heading="Nuestros Servicios"
      subheading="Todo lo necesario para crecer tu negocio de eficiencia energética"
      servicios={servicios}
    />
  </div>

  <Resultados
    heading="Algunos de Nuestros Resultados"
    images={imagenesResultados}
    cta={{
      label: "Reserva una llamada",
      href: "https://api.leadconnectorhq.com/widget/booking/xRuzUEjIGwYKcgQHehP5",
    }}
  />

  <div
    style=" background: url('https://images.leadconnectorhq.com/image/f_webp/q_80/r_1200/u_https://assets.cdn.filesafe.space/jcEKoOF2TKiEyPXqmAdw/media/64fb5900c42c810540a42444.jpeg') center center / cover no-repeat;
  background-attachment: fixed;
  width: 100%;"
  >
