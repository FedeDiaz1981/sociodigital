    imagen:
      "https://images.leadconnectorhq.com/image/f_webp/q_80/r_1200/u_https://assets.cdn.filesafe.space/GdbjQ9W5ITo55MeZzU7v/media/da16a62c-00de-45c6-be5a-1f0bac4052a9.jpeg",
  },
