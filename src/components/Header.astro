<header class="relativetop-0 left-0 w-full z-50 bg-[#446b59] text-white">
  <div class="max-w-7xl mx-auto px-4 md:px-6">
    <!-- Barra principal -->
    <div
      class="grid grid-cols-[1fr_2fr_1fr] md:grid-cols-[0.5fr_1.5fr_1fr] items-center h-[13em] md:h-[8.5em]"
    >
      <!-- Logo + divisor -->
      <div class="flex items-center gap-3">
        <!-- cambia la ruta del logo -->
        <a href="/" class="flex items-center ml-[12%]">
          <img
            src="https://images.leadconnectorhq.com/image/f_webp/q_80/r_1200/u_https://assets.cdn.filesafe.space/GdbjQ9W5ITo55MeZzU7v/media/6658afd460d3a730cb44798a.png"
            alt="Socio Digital"
            class="h-[8em] w-auto"
          />
          <span class="hidden sm:block h-8 w-px"></span>
        </a>
      </div>

      <!-- Nav centrado (desktop) -->
      <div>
        <nav
          class="hidden md:flex"
          style="align-items: center; background-color: inherit; gap: 24px"
        >
          <a href="/" class="text-white/90 hover:text-white">Inicio</a>
          <a href="/sobre-nosotros" class="text-white/90 hover:text-white"
            >Sobre Nosotros</a
          >
          <a href="/servicios" class="text-white/90 hover:text-white"
            >Servicios</a
          >
          <a href="/contacto" class="text-white/90 hover:text-white">Contacto</a
          >
        </nav>

         <a
          href="https://api.leadconnectorhq.com/widget/booking/xRuzUEjIGwYKcgQHehP5"
          class="md:hidden inline-flex items-center justify-center rounded-xl mt-[30%] md:mt-0 px-8 py-[0.9rem] text-[1.1rem]
         bg-[#1F2623] text-white font-semibold
         ring-1 ring-white/40 hover:bg-black/60 transition
         animate-glow"
        >
          Reserva una llamada
        </a>
      </div>

      <!-- CTA derecha + hamburguesa -->
      <div
        class="flex justify-items-center items-center md:items-start gap-3 h-[80%] md:h-[50%]"
      >
        <a
          href="https://api.leadconnectorhq.com/widget/booking/xRuzUEjIGwYKcgQHehP5"
          class="hidden md:inline-flex items-center justify-center rounded-xl mt-[30%] md:mt-0 px-8 py-[0.9rem] text-[1.1rem]
         bg-[#1F2623] text-white font-semibold
         ring-1 ring-white/40 hover:bg-black/60 transition
         animate-glow"
        >
          Reserva una llamada
        </a>

        <!-- botón mobile -->
        <button
          id="menu-btn"
          aria-controls="mobile-menu"
          aria-expanded="false"
          class="md:hidden inline-flex items-center justify-items-center rounded-md px-3 py-2
                 text-white/90 hover:text-white focus:outline-none focus:ring-2 focus:ring-white/60"
        >
          ☰
        </button>
      </div>
    </div>

    <!-- Menú mobile -->
    <nav id="mobile-menu" class="md:hidden hidden pb-4 space-y-2">
      <a href="/" class="block rounded-lg px-3 py-2 hover:bg-white/10">Inicio</a
      >
      <a
        href="/sobre-nosotros"
        class="block rounded-lg px-3 py-2 hover:bg-white/10">Sobre Nosotros</a
      >
      <a href="/servicios" class="block rounded-lg px-3 py-2 hover:bg-white/10"
        >Servicios</a
      >
      <a href="/contacto" class="block rounded-lg px-3 py-2 hover:bg-white/10"
        >Contacto</a
      >
      <a
        href="https://api.leadconnectorhq.com/widget/booking/xRuzUEjIGwYKcgQHehP5"
        class="block text-center rounded-2xl px-5 py-2.5
               bg-[#1F2623] text-white font-semibold
               ring-1 ring-white/20 shadow-[0_0_0_3px_rgba(255,255,255,0.08)]
               hover:bg-black/60 transition"
      >
        Reserva una llamada
      </a>
    </nav>
  </div>

  <script>
    const init = () => {
      const btn = document.getElementById("menu-btn");
      const menu = document.getElementById("mobile-menu");
      if (!btn || !menu) return;

      btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
        const expanded = btn.getAttribute("aria-expanded") === "true";
        btn.setAttribute("aria-expanded", (!expanded).toString());
      });
    };
    if (document.readyState === "loading")
      document.addEventListener("DOMContentLoaded", init);
    else init();
  </script>
</header>
